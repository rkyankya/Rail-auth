<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>

<h1> Sign Up! </h1>


<form accept-charset="UTF-8" action="/users" data-remote="true" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
  <div class="form-group">
    <label for="user_username">Username</label>
    <input class="form-control" id="user_username" name="user[username]" type="text">
  </div>
  <div class="form-group">
    <label for="user_password">Password</label>
    <input class="form-control" id="user_password" name="user[password]" type="password">
  </div>
  <div class="form-group">
    <label for="user_password_confirmation">Confirm Password</label>
    <input class="form-control" id="user_password_confirmation" name="user[password_confirmation]" type="password">
  </div>
  <input class="btn btn-secondary" name="commit" type="submit" value="Sign Up">
</form>